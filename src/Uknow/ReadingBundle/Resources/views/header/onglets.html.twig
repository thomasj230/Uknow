{% for donnees in listDonnees %}
    {% if donnees.id == id %}
        <div class="onglet actif">
            <span data-toggle="tooltip" data-placement="bottom" title="{{ donnees.titre }}" id="reading-onglet-texte-{{ loop.index0 }}">{{ donnees.titre }}</span>
            <button class="bouton-onglet" onclick="suppressionOnglet({{ loop.index }})">
                <span class="glyphicon glyphicon-remove-circle"></span>
            </button>
        </div>
    {% else %}
        <div class="onglet">
            <span data-toggle="tooltip" data-placement="bottom" title="{{ donnees.titre }}" id="reading-onglet-texte-{{ loop.index0 }}">{{ donnees.titre }}</span>
            <button class="bouton-onglet" onclick="suppressionOnglet({{ loop.index }})">
                <span class="glyphicon glyphicon-remove-circle"></span>
            </button>
        </div>
    {% endif %}
{% endfor %}