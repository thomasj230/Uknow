{# src/Uknow/PlatformBundle/Resources/views/layout.html.twig#}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        {% stylesheets
        '@bootstrap_css'
        '@UknowPlatformBundle/Resources/public/css/reading/layout.css'
        '@UknowPlatformBundle/Resources/public/css/reading/header.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400&subset=greek' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Bitter:400,700' rel='stylesheet' type='text/css'>
        <title>{% block title %}Uknow{% endblock %}</title>
    </head>
    <body>
        <div style="width: 100%; height: 50px; position: absolute; background-color: #133175"></div>
        <div class="container-fluid" style="height: 100%;">
            <header class="row">
                <div class="col-xs-offset-1 col-xs-2">
                    {{ include('UknowPlatformBundle:reading/header:title.html.twig') }}
                </div>
                <nav class="col-xs-offset-1 col-xs-4">
                    {{ render(controller('UknowPlatformBundle:Reading:nav')) }}
                </nav>
                <div class="col-xs-offset-1 col-xs-3">
                    {{ render(controller('UknowPlatformBundle:Reading:profil')) }}
                </div>
            </header>


        </div>

        {% javascripts
        '@jquery'
        '@bootstrap_js'
        '@UknowPlatformBundle/Resources/public/js/reading/header.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
    {{ render(controller('FOSUserBundle:Security:login')) }}
    {{ render(controller('FOSUserBundle:Registration:register')) }}
</html>