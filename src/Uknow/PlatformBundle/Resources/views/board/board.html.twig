{% trans_default_domain 'PlatformeBundle' %}

<div class="filtre">
    <input class="recherche" placeholder="{{ 'board.search'|trans }}">

    <select class="domaine">
        <option value>{{ 'board.domain'|trans }}</option>
        {% block domain %}
        {% endblock domain %}
    </select>

    <select class="matiere">
        <option value>{{ 'board.subject'|trans }}</option>
        {% block subject %}
        {% endblock subject %}
    </select>

    <select class="theme">
        <option value>{{ 'board.theme'|trans }}</option>
        {% block theme %}
        {% endblock theme %}
    </select>

    <select class="chapitre">
        <option value>{{ 'board.chapter'|trans }}</option>
        {% block chapter %}
        {% endblock chapter %}
    </select>

    <select class="type">
        <option value=>{{ 'board.type'|trans }}</option>
        <option value="cours">{{ 'type.course'|trans }}</option>
        <option value="exercice">{{ 'type.exercise'|trans }}</option>
    </select>

    <select class="niveau">
        <option value>{{ 'board.level'|trans }}</option>
        {% for niveau in listNiveaux %}
            <option value="{{ niveau.level }}">{{ niveau.level|trans }}</option>
        {% endfor %}
    </select>
</div>
