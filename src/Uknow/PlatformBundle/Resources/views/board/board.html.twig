    <input class="recherche" placeholder="Un cours ou un exercice Ã  rechercher ?">
    <select class="domaine">
        <option value>Choisir le domaine</option>
        {% for domaine in listDomaine %}
            <option value="{{ domaine.lien }}">{{ domaine.nom }}</option>
        {% endfor %}
    </select>
    <select class="matiere">
        <option value>Choisir la matiere</option>
        {% for domaine in listMatiere|keys %}
            <optgroup label={{ domaine }}>
            {% for type in domaine %}
                <option value="{{ type.lien }}">{{ type.nom }}</option>
            {% endfor %}
            </optgroup>
        {% endfor %}
    </select>
