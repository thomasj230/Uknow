    <input class="recherche" placeholder="Un cours ou un exercice Ã  rechercher ?">

    <select class="domaine">
        <option value>Choisir le domaine</option>
        {% for domains in listStructure %}
            <option value="{{ domains.domain }}">{{ domains.domain|trans }}</option>
        {% endfor %}
    </select>

    <select class="matiere">
        <option value>Choisir la matiere</option>
        {% for domains in listStructure %}
            <optgroup label={{ domains.domain|trans }}>
            {% for subjects in domains.subjects %}
                <option value="{{ subjects }}">{{ subjects|trans }}</option>
            {% endfor %}
            </optgroup>
        {% endfor %}
    </select>
