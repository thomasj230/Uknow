{% trans_default_domain 'FOSUserBundle' %}

<div class="modal fade" id="Inscription">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{ 'layout.register'|trans }}</h4>
            </div>
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                <div class="modal-body">
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}

                    <div class="form-group" style="font-family: 'Open Sans', sans-serif; font-weight: 400">
                        {{ form_errors(form.username, {'attr': {'class': 'alert alert-danger'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                    </div>

                    <div class="form-group" style="font-family: 'Open Sans', sans-serif; font-weight: 400">
                        {{ form_errors(form.email, {'attr': {'class':'alert alert-danger'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse Mail'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.plainPassword.first, {'attr': {'class': 'alert alert-danger'}}) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.plainPassword.second, {'attr': {'class': 'alert alert-danger'}}) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmation'}}) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
